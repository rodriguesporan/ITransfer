<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.ocapi.FirstFragment"
        android:label="Home Fragment"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.ocapi.SecondFragment"
        android:label="Next Fragment"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.ocapi.ItemFragment"
        android:label="List Fragment"
        tools:layout="@layout/fragment_item_list" />
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.example.ocapi.ScanFragment"
        android:label="Scan Fragment"
        tools:layout="@layout/fragment_scan" />
</navigation>